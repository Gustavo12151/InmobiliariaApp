<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- BotÃ³n primario -->
    <style name="Widget.Button.Primary" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <!-- Input moderno -->
    <style name="Widget.Input.Primary" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
    </style>

    <!-- Card -->
    <style name="Widget.Card.Primary" parent="CardView">
        <item name="cardElevation">6dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardBackgroundColor">@color/backgroundSoft</item>
        <item name="android:padding">12dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>

</resources>

